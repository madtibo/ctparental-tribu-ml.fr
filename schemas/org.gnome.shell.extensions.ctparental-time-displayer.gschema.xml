<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="ctparental-time-displayer">
  <enum id='org.gnome.shell.extensions.ctparental-time-displayer.panel-appearance'>
    <value value='0' nick='label'/>
    <value value='1' nick='icon'/>
    <value value='2' nick='label and icon'/>
  </enum>
  <schema id="org.gnome.shell.extensions.ctparental-time-displayer" path="/org/gnome/shell/extensions/ctparental-time-displayer/">
    <key name="ctparental-panel-appearance" type="i">
      <default>0</default>
      <summary>Appearance in the panel.</summary>
      <description>Sets the panel appearance. 0 - label, 1 - icon, 2 - label and icon.</description>
    </key>
    <key name="ctparental-panel-position" type="i">
      <default>0</default>
      <summary>Position of the panel.</summary>
      <description>Sets the panel position. 0 - left, 1 - center, 2 - right, 3 - system menu.</description>
    </key>
    <key type="as" name="ctparental-configuration-file">
      <default><![CDATA[['/usr/local/etc/CTparental/']]]></default>
      <summary></summary>
    </key>
    <key type="as" name="show-ctparental-dropdown">
      <default><![CDATA[['<Super>t']]]></default>
      <summary>Global key combination to show the drop-down.</summary>
    </key>
  </schema>
</schemalist>
